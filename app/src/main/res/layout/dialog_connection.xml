<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGreen"
    android:padding="@dimen/activity_padding_message">

    <TextView
        android:id="@+id/txtConnectionError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_connection_error"
        android:textSize="@dimen/text_size_message"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btnRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtConnectionError"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_margin_message"
        android:padding="@dimen/activity_padding_message"
        android:text="@string/button_try_again"
        android:textAllCaps="true"
        android:textStyle="bold" />
</RelativeLayout>